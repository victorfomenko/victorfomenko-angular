.pricing
	display table
	margin 40px auto
	font-family Calibri, Tahoma, Verdana, Arial, sans-serifalibri

.pricing__tarif
	background-color #FAFAFA
	position relative
	color #454545
	padding 14px
	border 1px solid #E1E1E1
	width 275px
	display table-cell
	/*height 450px*/

.pricing__tarif:before
	content: "";
	position: absolute;
	height: 5px;
	left: -1px;
	top: 0;
	background-color: #93CC76;
	width: 275px;

.pricing__tarif__price
	margin-top 25px
	margin-bottom 34px
	font-size 38px


.pricing__tarif__list
	padding 0 18px
	/*margin-bottom 40px*/
	text-align left

	li
		color: #9E9E9E
		display: block
		margin-left: 7px
		font-weight: 400
		font-size: 15px
		text-align left
		margin-bottom: 4px;

.pricing__btn
	display: block
	margin-bottom: 20px
	position: absolute;
	bottom 0
	right 14px
	left 14px
	color #9E9E9E
	display none


.pricing__tarif--min:before
	background-color: #ACE1FC;

.pricing__tarif--middle:before
	background-color: #FAD064;

.pricing__tarif--max:before
	background-color: #FF6161;